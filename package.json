{
  "name": "skills-packager",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "GitHub Action that packages skill directories into zip files.",
  "packageManager": "bun@1.3.3",
  "scripts": {
    "lint:actions": "actionlint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "bun run lint:actions && bun run typecheck",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "actionlint": "^2.0.6",
    "lefthook": "^2.0.12",
    "typescript": "^5.9.3"
  }
}
